{
  "name": "rpget",
  "description": "Download a directory or file from a repository url",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "rpget": "./dist/index.js"
  },
  "engines": {
    "node": ">=v18.17.1"
  },
  "scripts": {
    "dev": "cross-env RPGET_MODE=DEBUG tsx src/index.ts",
    "build-base": "tsup src/index.ts --format esm --clean",
    "build": "pnpm build-base --minify",
    "build:debug": "pnpm build-base --env.RPGET_MODE=DEBUG",
    "test": "vitest",
    "test:coverage": "vitest --coverage.enabled --coverage.provider=v8 --coverage.all --coverage.clean --coverage.include=src/core --coverage.exclude=**/types.ts",
    "test:ci": "pnpm run test:coverage --run",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:prettier": "prettier --check src",
    "fix:prettier": "prettier --write src",
    "typecheck": "tsc --noEmit && echo 'Type checking passed!'",
    "validate": "run-p lint typecheck --print-label --continue-on-error",
    "release": "bumpp"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "cleye": "^1.3.2",
    "decompress": "^4.2.1",
    "del": "^7.0.0",
    "execa": "^8.0.1",
    "magic-regexp": "^0.7.0",
    "picocolors": "^1.0.0",
    "shelljs": "^0.8.5",
    "tempy": "^3.1.0"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.4",
    "@types/shelljs": "^0.8.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitest/coverage-v8": "^0.34.2",
    "bumpp": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bisquit/rpget.git"
  },
  "bugs": {
    "url": "https://github.com/bisquit/rpget/issues"
  },
  "keywords": [
    "cli",
    "download",
    "repo",
    "repository",
    "github",
    "gitlab"
  ]
}
