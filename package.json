{
  "name": "ghget-cli",
  "description": "Download a directory or file from a GitHub url",
  "version": "0.0.3",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "ghget": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "cross-env RPGET_MODE=DEBUG tsx src/index.ts",
    "build-base": "tsup src/index.ts --format esm --clean",
    "build": "tsup src/index.ts --format esm --clean",
    "build:debug": "pnpm build --env.RPGET_MODE=DEBUG",
    "test": "vitest",
    "test:coverage": "vitest --coverage.enabled --coverage.provider=v8 --coverage.all --coverage.clean --coverage.include=src/core --coverage.exclude=**/types.ts",
    "test:ci": "pnpm run test:coverage --run",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "staticcheck": "conc pnpm:lint pnpm:prettier pnpm:typecheck",
    "bump": "bumpp"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "cleye": "^1.3.2",
    "decompress": "^4.2.1",
    "del": "^7.0.0",
    "execa": "^8.0.1",
    "magic-regexp": "^0.7.0",
    "picocolors": "^1.0.0",
    "shelljs": "^0.8.5",
    "tempy": "^3.1.0"
  },
  "devDependencies": {
    "@bisquit/changelogithub-config": "^0.0.9",
    "@types/decompress": "^4.2.4",
    "@types/shelljs": "^0.8.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitest/coverage-v8": "^0.34.2",
    "bumpp": "^9.2.0",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.0.2",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bisquit/ghget.git"
  },
  "bugs": {
    "url": "https://github.com/bisquit/ghget/issues"
  },
  "keywords": [
    "cli",
    "download",
    "repo",
    "repository",
    "github"
  ]
}
